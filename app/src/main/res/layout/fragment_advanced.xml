<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unravel.amanda.unravel.fragments.AdvancedSearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/color_choice_layout"
            android:background="#e85984"
            android:longClickable="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/search_advanced_color"
                android:id="@+id/tv_color_selection"
                android:phoneNumber="false"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="+"
                android:id="@+id/color_expand"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="36dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp" />

        </RelativeLayout>

        <GridLayout
            android:layout_width="395dp"
            android:layout_height="347dp"
            android:columnCount="2"
            android:rowCount="4"
            android:id="@+id/color_selection_grid"
            android:visibility="gone"
            android:layout_below="@+id/color_choice_layout"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="#71ec74">

        </GridLayout>
    </RelativeLayout>

</LinearLayout>
