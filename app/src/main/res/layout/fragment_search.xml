<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unravel.amanda.unravel.fragments.SearchResultsFragment">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.unravel.amanda.unravel.fragments.BasicSearchFragment"
        android:id="@+id/searchDetailsFragment"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        tools:layout="@layout/fragment_basic_search" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv"
        android:layout_below="@+id/searchDetailsFragment"
        />

</RelativeLayout>
