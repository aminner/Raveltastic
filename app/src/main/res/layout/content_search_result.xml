<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_card_view"
    android:clickable="false"
    android:dividerPadding="5dp"
    android:elevation="2dp"
    android:translationZ="1dp"
    android:transitionGroup="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_result_image"
        android:contentDescription="@string/image"
        android:minHeight="100dp"
        android:minWidth="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/search_result_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/search_result_image"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:minHeight="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/search_result_pattern_type"
            android:layout_below="@+id/search_result_name"
            android:layout_toEndOf="@+id/search_result_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/search_result_pattern_cost"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/search_result_name" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
